<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.ustc.wlresolver">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.MainActivity"
            android:label="WLResolver">
            <intent-filter >
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="cn.edu.ustc.wlresolver.activity.ProcessActivity"
            android:label="@string/process"
            android:theme="@style/Theme.AppCompat"
            android:parentActivityName=".activity.MainActivity">
            <!--定义activity的父子关系https://www.cnblogs.com/persona5/p/4662875.html-->
            <meta-data
                android:name = "android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>
    </application>

</manifest>
